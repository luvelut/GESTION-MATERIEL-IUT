    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>Emprunteur</th>
                <td>{{ loan.user.firstName }} {{loan.user.lastName }}</td>
