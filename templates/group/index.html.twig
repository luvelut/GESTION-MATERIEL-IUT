{% extends 'base.html.twig' %}

{% block title %}Les groupes{% endblock %}

{% block body %}
    <div class="index">
        <h1>Groupes</h1>
        <a class="hollow button primary" href="{{ path('group_new') }}"> Cr√©er </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.label }}</td>
                <td class="actions">
                    <a href="{{ path('group_show', {'id': group.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('group_edit', {'id': group.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
